<div class="cuisine">
  <%= link_to "商品一覧", "/admin/cuisines" %>
</div>

<div class="wrap">
  <h1>商品登録</h1>

  <%= form_with model: [:admin, @cuisine], local: true do |f| %>
    <div class="container_group">

      <div class="container <%= @cuisine.errors.key?(:name) ? "has-error" : "" %>">
        <div class="cohesive">
          <%= f.label :name %>
          <%= f.text_field :name, class: "input_common", placeholder: "商品名を入力してね！" %>
        </div>

        <% if @cuisine.errors.key?(:name) %>
          <div class="error">
            <p><%= @cuisine.errors.full_messages_for(:name).first %></p>
          </div>
        <% end %>
      </div>

      <div class="container <%= @cuisine.errors.key?(:price) ? "has-error" : "" %>">
        <div class="cohesive">
          <%= f.label :price, class: "adj" %>
          <%= f.number_field :price, class: "input_common" , placeholder: "値段を入力してね！" %>
        </div>

        <% if @cuisine.errors.key?(:price) %>
          <div class="error">
            <p><%= @cuisine.errors.full_messages_for(:price).first %></p>
          </div>
        <% end %>
      </div>

      <div class="container <%= @cuisine.errors.key?(:text) ? "has-error" : "" %>">
        <div class="cohesive">
          <%= f.label :detail, class: "adj" %>
          <%= f.text_area :text, class: "input_common siz_adj", placeholder: "商品の詳細を入力してね！" %>
        </div>

        <% if @cuisine.errors.key?(:text) %>
          <div class="error">
            <p><%= @cuisine.errors.full_messages_for(:text).first %></p>
          </div>
        <% end %>
      </div>

      <div class="container <%= @cuisine.errors.key?(:image) ? "has-error" : "" %>">
        <div class="cohesive wid_adj">
          <%= f.label :img, class: "img_adj" %>
          <%= f.file_field :image, class: "input_common" %>
        </div>

        <% if @cuisine.errors.key?(:image) %>
          <div class="error">
            <p><%= @cuisine.errors.full_messages_for(:image).first %></p>
          </div>
        <% end %>
      </div>

      <div class="submit">
        <%= f.submit '登録' %>
      </div>
    </div>
  <% end %>
  <style>
  .has-error {
    border-color: red;
  }
  .error p {
    color: red;
  }
  </style>
</div>
