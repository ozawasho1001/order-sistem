<table>
  <tr>
    <th>Number</th>
    <th>Name</th>
    <th>Email</th>
    <th>Actor</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @user.each do |user| %>
    <tr>
      <td><%= user.id%></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
        <%= user.admin ? "管理者" : "一般" %>
      </td>
      <td><%= link_to "編集", "/admin/users/#{user.id}/edit", class: "edit" %></td>
      <td>
        <%= link_to "削除",
          "/admin/users/#{user.id}",
          method: :delete,
          'data-confirm' => '本当にアカウントを削除しても良いですか？',
          class: "delete" %>
      </td>
    </tr>
  <% end  %>
</table>