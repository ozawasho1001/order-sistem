<!DOCTYPE html>
<html>
  <head>
    <title>OrderSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>

    <header>
      <div class="link_wrapper">
        <div class="main_logo_group">
          <a href="/admin/topics">
            <%= image_tag "logo.png", class: "main_logo_img" %>
          </a>
          <p>- Cherish deliciousness</p>
        </div>
      </div>
    </header>

    <div class="main-content">
      <%= yield %>

      <script>
        $(function(){
          $(".alert").fadeOut(5000);
        });
      </script>
    </div>

    <footer>
      <p>(C) 2021 Self Order System.</p>
    </footer>
  </body>
</html>
